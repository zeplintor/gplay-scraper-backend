# Backend Environment Variables

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here

# CORS Configuration (comma-separated domains)
ALLOWED_ORIGINS=https://playstore-analytics.pro,https://your-netlify-app.netlify.app

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Database (if you migrate to PostgreSQL later)
# DATABASE_URL=postgresql://user:password@localhost:5432/gplay_scraper

# License Configuration
LICENSE_FILE_PATH=licenses.json

# Rate Limiting
RATE_LIMIT_PER_DAY=3
RATE_LIMIT_PREMIUM=9999

# Server Configuration
PORT=5000
HOST=0.0.0.0
